{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",                     
    "noImplicitAny": true,                 
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@modules/*" : ["src/modules/*"],
      "@components/*" : ["src/components/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}